<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="800" height="600"
		 creationComplete="creationCompleteHandler(event)"
		 >
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import model.AppData;
			
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			
			protected function id_list_changeHandler(event:IndexChangeEvent):void
			{
				AppData.selectedCertSizeIndex = event.newIndex;
			}
			
			public function get viewBackgroundImage():Bitmap
			{
				return new AppData.BG_IMG_00() as Bitmap;
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				
			}
			
			private function closeWindowButtonClickHandler(event):void
			{
				AppData.mainApp.nativeWindow.close();
			}
			
			private function minWindowButtonClickHandler(event):void
			{
				AppData.mainApp.nativeWindow.minimize();
			}
		]]>
	</fx:Script>
	<s:BorderContainer width="100%" height="100%"
					   backgroundImage="{viewBackgroundImage}"
					   >
		<s:List id="id_list" height="220" borderVisible="false" horizontalCenter="-313"
				itemRenderer="skins.HW_ListSkin_CertSize" useVirtualLayout="false"
				verticalCenter="-78" change="id_list_changeHandler(event)"
			    selectedIndex="{AppData.selectedCertSizeIndex}"
				>
			<s:dataProvider>
				<s:ArrayList>
					<fx:Object name="25_35" normal="@Embed('assets/images/photosize_menu/button_photosize_25_35.png')" down="@Embed('assets/images/photosize_menu/button_photosize_25_35_pd.png')" />
					<fx:Object name="22_32" normal="@Embed('assets/images/photosize_menu/button_photosize_22_32.png')" down="@Embed('assets/images/photosize_menu/button_photosize_22_32_pd.png')"/>
					<fx:Object name="33_48" normal="@Embed('assets/images/photosize_menu/button_photosize_33_48.png')" down="@Embed('assets/images/photosize_menu/button_photosize_33_48_pd.png')"/>
					<fx:Object name="35_45" normal="@Embed('assets/images/photosize_menu/button_photosize_35_45.png')" down="@Embed('assets/images/photosize_menu/button_photosize_35_45_pd.png')"/>
					<fx:Object name="35_50" normal="@Embed('assets/images/photosize_menu/button_photosize_35_50.png')" down="@Embed('assets/images/photosize_menu/button_photosize_35_50_pd.png')"/>
					<fx:Object name="50_50" normal="@Embed('assets/images/photosize_menu/button_photosize_50_50.png')" down="@Embed('assets/images/photosize_menu/button_photosize_50_50_pd.png')"/>
				</s:ArrayList>
			</s:dataProvider>
		</s:List>
		<s:Button x="724" y="14" label="Button" skinClass="skins.HW_MinButton_Skin" click="closeWindowButtonClickHandler(event)"/>
		<s:Button x="754" y="14" label="Button" skinClass="skins.HW_CloseButton_Skin" click="minWindowButtonClickHandler(event)"/>
	</s:BorderContainer>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
</s:Group>
