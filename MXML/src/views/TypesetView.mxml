		</s:Parallel>
		<s:Parallel id="id_resize_normal">
			<!--<s:Resize widthTo="400" heightTo="400" target="{this.id_list_tile_real}"/>-->
			<s:Scale scaleYTo="1" scaleXTo="1" target="{this.id_list_tile}" autoCenterTransform="true" />
		</s:Parallel>
	</fx:Declarations>
