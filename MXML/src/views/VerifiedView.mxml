<?xml version="1.0" encoding="utf-8"?>
<views:ViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:views="views.*" width="800" height="600" xmlns:components="views.components.*" 
				>
	<fx:Script>
		<![CDATA[
			import model.AppData;
			
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			
			override protected function creationCompleteHandler(event:FlexEvent):void
			{
				this.id_list.enabled = false;
				///Upldate UI images.
				this.updateImageViews();
			}
			
			override public function get viewBackgroundImage():Bitmap
			{
				return new AppData.BG_IMG_01() as Bitmap;
			}
			
			protected function cancelVerify_button_clickHandler(event:MouseEvent):void
			{
				AppData.mainApp.id_viewStack.selectedIndex = AppData.VIEW_UPLOAD;			
			}
			
			protected function verifyNext_button_clickHandler(event:MouseEvent):void
			{
				AppData.mainApp.id_viewStack.selectedIndex = AppData.VIEW_TYPESET;			
			}
			
			private function updateImageViews():void
			{
				//
				this.id_image_frame.source = AppData.ARRAY_VERIFIED_PHOTO_FRAMES[AppData.selectedCertSizeIndex];
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:BorderContainer width="100%" height="100%" contentBackgroundAlpha="0"
					   backgroundImage="{viewBackgroundImage}"
					   >
		
		<components:HW_List_Cert id="id_list" change="id_list_changeHandler(event)"/>
		
		<s:Image id="id_image_instruction" x="200" y="60" source="{AppData.INS_VERIFIED_TEXT}"/>
		
		<s:Image id="id_image_frame" x="410" y="190" />
		
		<s:Button x="383" y="500" label="CANCEL_VERIFY" skinClass="skins.button.HW_Back2EditorButton_Skin" click="cancelVerify_button_clickHandler(event)"/>
		<s:Button x="505" y="500" label="GOTO_TYPESET" skinClass="skins.button.HW_VerifyNextButton_Skin" click="verifyNext_button_clickHandler(event)"/>
		
	</s:BorderContainer>
</views:ViewBase>